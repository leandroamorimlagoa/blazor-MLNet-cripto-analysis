@inherits LayoutComponentBase
@inject NavigationManager navigationManager
<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <div class="page">
                <div class="sidebar">
                    <NavMenu />
                </div>

                <main>
                    <div class="top-row px-4">
                        <a href="@ConstantNames.Routes.Logout">Logout</a>
                    </div>

                    <article class="content px-4">
                        @Body
                    </article>
                </main>
            </div>
        </Authorized>
        <NotAuthorized>
            @{
                navigationManager.NavigateTo(ConstantNames.Routes.Logout);
            }
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>